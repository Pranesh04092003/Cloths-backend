{
  "name": "backend-cloths",
  "version": "1.0.0",
  "description": "A robust e-commerce backend system for clothing retail, built with Node.js and Express. Features include user authentication, product management, shopping cart functionality, order processing, and real-time updates using Socket.IO. The system uses MongoDB for data storage, Cloudinary for image management, and implements JWT-based security.",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "start:prod": "NODE_ENV=production node server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist",
    "prepare": "husky install"
  },
  "keywords": [
    "e-commerce",
    "clothing",
    "nodejs",
    "express",
    "mongodb",
    "backend",
    "rest-api",
    "jwt",
    "authentication",
    "cloudinary",
    "socket.io"
  ],
